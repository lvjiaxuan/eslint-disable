{
  "name": "eslint-disable",
  "displayName": "eslint-disable",
  "version": "0.0.2",
  "description": "A VSCode extension for inserting `eslint-disable` comments base on selected lines.",
  "categories": [
    "Other",
    "Snippets"
  ],
  "main": "./dist/extension.js",
  "engines": {
    "vscode": "^1.72.0"
  },
  "scripts": {
    "compile": "tsup src/extension.ts --external=vscode --format=cjs --shims=false --clean",
    "dev": "nr compile --watch",
    "vscode:prepublish": "nr compile",
    "pretest": "nr compile && nr lint",
    "lint": "eslint . --fix",
    "pack": "vsce package",
    "publish": "vsce publish"
  },
  "icon": "assets/icon.png",
  "publisher": "lvjiaxuan",
  "activationEvents": [
    "workspaceContains:**/*.ts",
    "workspaceContains:**/*.js",
    "onLanguage:javascript",
    "onLanguage:typescript"
  ],
  "contributes": {
    "commands": [
      {
        "command": "eslint-disable.helloWorld",
        "title": "eslint-disable: Hello World"
      },
      {
        "command": "eslint-disable.disableIT",
        "title": "eslint-disable: disable it"
      }
    ],
    "configuration": {
      "title": "eslint-disable",
      "properties": {
        "eslint-disable.disable": {
          "type": "boolean",
          "default": false,
          "description": "Disable the eslint-disable extension."
        }
      }
    },
    "menus": {
      "editor/context": [
        {
          "command": "eslint-disable.disableIT",
          "group": "1_modification"
        }
      ]
    },
    "keybindings": [
      {
        "command": "eslint-disable.disableIT",
        "key": "ctrl+alt+d",
        "mac": "ctrl+alt+d",
        "when": "editorTextFocus"
      }
    ],
    "snippets": [
      {
        "language": "javascript",
        "path": "./snippets/snippets.json"
      },
      {
        "language": "javascriptreact",
        "path": "./snippets/snippets.json"
      },
      {
        "language": "typescript",
        "path": "./snippets/snippets.json"
      },
      {
        "language": "typescriptreact",
        "path": "./snippets/snippets.json"
      }
    ]
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/lvjiaxuan/eslint-disable"
  },
  "devDependencies": {
    "@lvjiaxuan/eslint-config": "^0.1.0",
    "@types/eslint": "^8.4.6",
    "@types/node": "^18.11.2",
    "@types/vscode": "^1.72.0",
    "@typescript-eslint/eslint-plugin": "^5.40.1",
    "@typescript-eslint/parser": "^5.40.1",
    "@vscode/test-electron": "^2.1.5",
    "eslint": "^8.25.0",
    "tsup": "^6.3.0",
    "typescript": "^4.8.4"
  },
  "license": "MIT",
  "eslintConfig": {
    "extends": "@lvjiaxuan",
    "rules": {
      "no-promise-executor-return": "off"
    }
  },
  "dependencies": {
    "vscode-languageserver": "^8.0.2"
  }
}
