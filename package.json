{
  "publisher": "lvjiaxuan",
  "name": "vscode-eslint-disable",
  "displayName": "ESLint Disable",
  "type": "module",
  "version": "1.2.3",
  "description": "Use hotkeys to insert the corresponding disabling rules comment.",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/lvjiaxuan/vscode-eslint-disable"
  },
  "categories": [
    "Other",
    "Snippets"
  ],
  "main": "./dist/extension.js",
  "icon": "assets/logo.png",
  "engines": {
    "vscode": "^1.60.0"
  },
  "activationEvents": [
    "workspaceContains:**/*.ts",
    "workspaceContains:**/*.js",
    "onLanguage:javascript",
    "onLanguage:typescript"
  ],
  "contributes": {
    "commands": [
      {
        "command": "eslint-disable.disable",
        "title": "eslint-disable: disable for line(s)"
      },
      {
        "command": "eslint-disable.entire",
        "title": "eslint-disable: disable for entire file"
      },
      {
        "command": "eslint-disable.all",
        "title": "eslint-disable: disable all rules for entire file"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "command": "eslint-disable.disable",
          "group": "1_modification"
        },
        {
          "command": "eslint-disable.entire",
          "group": "1_modification"
        },
        {
          "command": "eslint-disable.all",
          "group": "1_modification"
        }
      ]
    },
    "keybindings": [
      {
        "command": "eslint-disable.disable",
        "key": "ctrl+alt+d",
        "mac": "ctrl+alt+d",
        "when": "editorTextFocus"
      },
      {
        "command": "eslint-disable.entire",
        "key": "ctrl+alt+e",
        "mac": "ctrl+alt+e",
        "when": "editorTextFocus"
      },
      {
        "command": "eslint-disable.all",
        "key": "ctrl+alt+a",
        "mac": "ctrl+alt+a",
        "when": "editorTextFocus"
      }
    ]
  },
  "scripts": {
    "compile": "tsup src/extension.ts --external=vscode --clean",
    "dev": "nr compile --watch --sourcemap",
    "vscode:prepublish": "nr compile",
    "pretest": "nr compile && nr lint",
    "lint": "eslint .",
    "pack": "vsce package",
    "publish": "vsce publish"
  },
  "devDependencies": {
    "@lvjiaxuan/eslint-config": "^1.6.0",
    "@types/node": "^20.10.8",
    "@types/vscode": "1.60.0",
    "eslint": "^8.56.0",
    "tsup": "^8.0.1",
    "typescript": "^5.3.3"
  }
}
