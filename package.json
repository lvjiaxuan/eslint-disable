{
  "publisher": "lvjiaxuan",
  "name": "vscode-eslint-disable",
  "displayName": "ESLint Disable",
  "version": "0.2.0",
  "description": "Insert `eslint-disable` directive comment with present problem rules for VS Code.",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/lvjiaxuan/vscode-eslint-disable"
  },
  "categories": [
    "Other",
    "Snippets"
  ],
  "main": "./dist/extension.js",
  "icon": "assets/logo.png",
  "engines": {
    "vscode": "^1.60.0"
  },
  "activationEvents": [
    "workspaceContains:**/*.ts",
    "workspaceContains:**/*.js",
    "onLanguage:javascript",
    "onLanguage:typescript"
  ],
  "contributes": {
    "commands": [
      {
        "command": "eslint-disable.disable",
        "title": "eslint-disable: disable for line(s)"
      },
      {
        "command": "eslint-disable.entire",
        "title": "eslint-disable: disable for entire file"
      },
      {
        "command": "eslint-disable.reload",
        "title": "eslint-disable: reload"
      }
    ],
    "configuration": {
      "title": "ESLint Disable",
      "properties": {
        "eslint-disable.disable": {
          "type": "boolean",
          "default": false,
          "description": "Disable the eslint-disable extension."
        },
        "eslint-disable.preLinting": {
          "type": "boolean",
          "default": true,
          "description": "Pre-Linting after activeTextEditor open."
        }
      }
    },
    "menus": {
      "editor/context": [
        {
          "command": "eslint-disable.disable",
          "group": "1_modification"
        },
        {
          "command": "eslint-disable.entire",
          "group": "1_modification"
        }
      ]
    },
    "keybindings": [
      {
        "command": "eslint-disable.disable",
        "key": "ctrl+alt+d",
        "mac": "ctrl+alt+d",
        "when": "editorTextFocus"
      },
      {
        "command": "eslint-disable.entire",
        "key": "ctrl+alt+e",
        "mac": "ctrl+alt+e",
        "when": "editorTextFocus"
      }
    ]
  },
  "scripts": {
    "compile": "tsup src/extension.ts --external=vscode --format=cjs --shims=false --clean",
    "dev": "nr compile --watch",
    "vscode:prepublish": "nr compile",
    "pretest": "nr compile && nr lint",
    "lint": "eslint .",
    "pack": "vsce package",
    "publish": "vsce publish",
    "release": "nx jiti release.ts"
  },
  "dependencies": {
    "vscode-languageserver": "^8.1.0"
  },
  "devDependencies": {
    "@lvjiaxuan/eslint-plugin": "^0.5.2",
    "@types/eslint": "^8.21.1",
    "@types/node": "^18.14.2",
    "@types/vscode": "1.60.0",
    "@typescript-eslint/eslint-plugin": "^5.53.0",
    "@typescript-eslint/parser": "^5.53.0",
    "@vscode/test-electron": "^2.2.3",
    "eslint": "^8.35.0",
    "tsup": "^6.6.3",
    "typescript": "^4.9.5"
  },
  "eslintConfig": {
    "extends": "plugin:@lvjiaxuan/recommended",
    "rules": {
      "no-promise-executor-return": "off"
    }
  }
}
